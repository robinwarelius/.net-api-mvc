@model LoginUserViewModel;
@{
    ViewBag.Title = "Login";
}

<section class="user-input-content">
    <div class="container user-input-links-item">
        <a asp-controller="Home" asp-action="Index" class="user-input-link">Home > </a>

        <span class="user-input-text">Login</span>



    </div>

    <div class="container">
        <form class="user-input-form" asp-controller="Account" asp-action="Login" method="post" novalidate>

            @if(ViewBag.Response == null)
            {
                <h6 class="user-input-title">Login</h6>
            }
            else
            {
                <h6 class="user-input-title">@ViewBag.Response</h6>
            }
            

            <div class="user-input-item">
                <input class="user-input" asp-for="Email" placeholder="Email" onkeyup="validate(event)" />
                <span asp-validation-for="Email"></span>
            </div>

            <div class="user-input-item">
                <input class="user-input" asp-for="Password" placeholder="Password" onkeyup="validate(event)" />
                <span asp-validation-for="Password"></span>
            </div>

            <div class="row user-button-content">
                <div class="col-lg-6">
                    <button class="input-login-button" type="submit">Login</button>
                </div>
                <div class="col-lg-6">
                    <a class="input-login-button" asp-controller="Account" asp-action="Register">Register</a>
                </div>
            </div>
        </form>
    </div>
</section>

